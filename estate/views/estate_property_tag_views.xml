<odoo>
    <record model="ir.actions.act_window" id="estate_property_tag_views">
        <field name="name">房屋标签</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="estate_property_custom_tag_tree_views" model="ir.ui.view">
        <field name="name">estate_property_custom_tag_tree_views</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>
</odoo>